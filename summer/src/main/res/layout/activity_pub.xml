<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlt_pub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DBDBDB"
    >

    <!-- title标题 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBg"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="?attr/popupTheme"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="锚点"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/rlt_camera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >
                <TextView
                    android:id="@+id/tv_add_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="实景"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/tv_add_img"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/ic_camera" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
               />

            <RelativeLayout
                android:id="@+id/rlt_line_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >

                <TextView
                    android:id="@+id/tv_line_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="添加"
                    android:layout_centerInParent="true"
                    />
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/tv_line_add"
                    android:src="@mipmap/ic_ping" />

            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rlt_lat_lan"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBg">

        <!-- 经纬度、海拔 -->
        <LinearLayout
            android:id="@+id/ll_latLong"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_lang"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_lat" />

                <TextView
                    android:id="@+id/tv_Long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/iv_lang"
                    android:text="经度:"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_show_Long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tv_Long"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_lat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_lat" />

                <TextView
                    android:id="@+id/tv_Lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/iv_lat"
                    android:text="纬度:"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_show_Lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tv_Lat"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_alt"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_altitude" />

                <TextView
                    android:id="@+id/tv_altitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/iv_alt"
                    android:text="海拔:"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_show_altitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tv_altitude"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>

        <!-- 地理位置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/ll_latLong"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_location"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="锚点位置："
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <com.summer.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="5dp"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rlt_pub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                >

                <EditText
                    android:id="@+id/edt_pub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:hint="锚点标题"
                    android:inputType="textMultiLine"
                    android:maxLength="30"
                    android:textColor="#99111111"
                    android:textColorHint="#55333333"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="18sp"
                    android:typeface="normal"
                    />
            </RelativeLayout>


            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:layout_below="@id/rlt_pub_title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/iv_line"
                android:alpha="0.5"
                />

            <EditText
                android:id="@+id/edt_pub_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="锚点记录描述"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.2"
                android:textColor="#99000000"
                android:textColorHint="#55333333"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textScaleX="1.1"
                android:textSize="16sp"
                />


            <RelativeLayout
                android:id="@+id/rlt_gridImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:id="@+id/iv_pub_add"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    />

            </RelativeLayout>

        </LinearLayout>


    </com.summer.view.BounceScrollView>




</RelativeLayout>